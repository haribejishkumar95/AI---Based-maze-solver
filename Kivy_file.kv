#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car_Functions>:
    size: 20,20
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Color:
            rgba: 1,1,1,1
        Rectangle:    
            size:self.size
            pos:self.pos
        PopMatrix
<Right>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,1,1
        Rectangle:
            size:self.size
            pos:self.pos
<Left>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Rectangle:
            size:self.size
            pos:self.pos
<Front>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,0,1,1
        Rectangle:
            size:self.size
            pos:self.pos                                 

<Platform>:
    car: game_car
    d1: game_ball1
    d2: game_ball2
    d3: game_ball3

    Car_Functions:
        id: game_car
        center: 400,300
    Right:
        id: game_ball1
        center: 415,320 
    Left:
        id: game_ball2
        center: 385,320
    Front:
        id: game_ball3
        center: 400,320